<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color_body"
    tools:context=".fragment.AddProductFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/imageAddProduct"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_image_round"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_image_24" />

        <EditText
            android:id="@+id/txtProductTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_search_bar"
            android:hint="Title"
            android:inputType="text"
            android:padding="10dp" />

        <Spinner
            android:id="@+id/spinnerProductBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_search_bar"
            android:padding="10dp" />

        <EditText
            android:id="@+id/txtProductPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_search_bar"
            android:hint="Price"
            android:inputType="number"
            android:padding="10dp" />

        <EditText
            android:id="@+id/txtProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_search_bar"
            android:hint="Quantity"
            android:inputType="numberDecimal"
            android:padding="10dp" />

        <EditText
            android:id="@+id/txtProductDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/custom_search_bar"
            android:gravity="start"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/quicksand"
            android:text="Add Product"
            android:textStyle="bold" />

    </LinearLayout>

</FrameLayout>